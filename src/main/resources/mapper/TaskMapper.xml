<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.TaskDao">
    <!-- 1、增加审批任务 -->
    <insert id="insertTask" parameterType="Task">
        insert into task(task_no,is_finished,apl_no,teacher_no,generate_time)values (#{task_no},#{is_finished},#{apl_no},#{teacher_no},#{generate_time})    </insert>
    <!--2、通过审批任务表的单号来查询这张表的所有内容-->
    <select id="selectTask" parameterType="Integer" resultType="Task">
        select * from task where task_no = #{task_no}
    </select>
</mapper>